<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardView.Base" parent="CardView.Light">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardBackgroundColor">@color/cardview_default_background_light</item>
    </style>

    <style name="TextStyleCardSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/size_text_small</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextStyleCardMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/size_text_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextStyleClickTabsItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/size_text_medium</item>
        <item name="android:textColor">#212121</item>
    </style>

</resources>
